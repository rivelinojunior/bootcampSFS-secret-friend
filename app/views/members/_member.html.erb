<%= form_for member, remote: true do |f| %>
  <div class="member" id="member_<%= member.id %>">
    <div class="row">
      <%= f.hidden_field :campaign_id, value: @campaign.id %>
      <div class="col s12 m5 input-field">
        <%= f.text_field :name, class: "validate field_member"%>
        <label for="name" class="active">Nome</label>
      </div>
      <div class="col s12 m5 input-field">
        <%= f.email_field :email, class: "validate field_member" %>
        <label for="member[email]" class="active" data-error="Formato incorreto">Email</label>
      </div>
      <% if member.id %>
        <div class="col s3 offset-s3 m1 input-field">
          <i class="material-icons icon <%= (member.open)? 'opened' : '' %>">visibility</i>
        </div>
        <div class="col s3 m1 input-field">
          <a href="#" class="remove_member" id="<%= member.id %>">
            <i class="material-icons icon">delete</i>
          </a>
        </div>
      <% end %>
    </div>  
  </div>
<% end %>