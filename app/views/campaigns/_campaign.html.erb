<div class="card horizontal">
  <div class="card-content col s12">
    <div class="col s12 l8 m12">
      <div class="row">
        <div class="col s8 m9 l9">
          <p class="title"><%= truncate(campaign.title, length: 30, omission: '...') %></p>
        </div>
        <div class="col s4 m2 l2">
          <p class="data"><%= (campaign.event_date)? campaign.event_date.strftime("%d/%m/%y") : '' %></p>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12 l12">
          <p class="subtitle"><%= truncate(campaign.description, length: 70, omission: '...') %></p>
        </div>
      </div>
      <div class="row status">
        <div class="col s6 m6 l4 visibility">
          <i class="material-icons visibility-icon">visibility</i>
          <span class="visibility-text">Vistos <%= open_number(campaign) %></span>
        </div>
        <div class="col s2 m2 offset-s4 l2 offset-l6">
          <span class="new badge <%= (campaign.status == "pending")? 'orange' : '' %>"> <%= (campaign.status == "pending")? 'Pendente' : 'Sorteado' %> </span>
        </div>
      </div>
    </div>
    <div class="col l4 s12 m12 center enter">
      <div class="row">
        <div class="col s12">
          <a class="waves-effect waves-light btn grey" href=<%= "/campaigns/#{campaign.id}" %>>Entrar</a>
        </div>
      </div>
    </div>
  </div>
</div>